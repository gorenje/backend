= haml :"_js_global_variables"
= haml :"_js_include_files", :locals => {:files => ["geolocation","code","google","init_user_offers"]}

= haml :"_sendbird_widget"
= haml :"_notification_websocket"
- i18n = TranslatorHelper.new("pages.user_offers")

.panel.panel-primary
  = haml(:"_panel_heading", :locals => { :i18n => i18n, :icon => "tag8" })
  .panel-body
    .row
      .col-md-6
        .input-group
          %input.form-control#searchterms{:type => "text", :value => "", :placeholder => i18n.placeholder.filter.t, :style => "font-size: 16px;" }/
          .input-group-btn
            %a.btn.btn-default{ "data-icon" => "tag8", :href => "/offer/create", :target => "_blank", :title => i18n.button.create_offer.t }
      .col-md-6
        = haml :"_addresslist"
    .row.pt-10px
      .col-md-6.col-md-push-6
        .google-maps
          #map
      .col-md-6.col-md-pull-6
        = haml :"_resultslist"
